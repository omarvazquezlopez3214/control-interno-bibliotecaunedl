@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Biblioteca UNEDL</title>
    <link rel="shortcut icon" href="~/Imagenes/unedl.ico">
    @Styles.Render("~/Content/css")
</head>

<body class="bg-gradient-primary">
    <div class="container">
        <!-- Outer Row -->
        <div class="row justify-content-center">
            <div class="col-xl-6 col-lg-2 col-md-2">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="">
                            <div class="col-8">
                                <img src="@Url.Content("~/Imagenes/unedl2.png")" style="width: 440px;height: 140px;" class="p-4"/>
                            </div>
                            <div class="col-12">
                                <div class="p-2">
                                    <div class="text-center">
                                        
                                        <h1 class="h3 text-gray-900 mb-4">Bienvenido!</h1>
                                    </div>
                                    <form class="user" action="@Url.Action("Index","Login")" method="post" >
                                        <div class="form-group">
                                            <input type="email" class="form-control form-control-user" name="correo" placeholder="Email" @*value="Konoe@gmail.com"*@>
                                        </div>
                                        <div class="form-group">
                                            <input type="password" class="form-control form-control-user" name="clave" placeholder="Password" @*value="123"*@>
                                        </div>
                                        <div class="form-group">
                                            @{if (ViewBag.Error != null)
                                                {
                                                    <div class="alert alert-danger" role="alert">
                                                        @ViewBag.Error
                                                    </div>
                                                }
                                            }
                                        </div>
                                        <button class="btn btn-primary btn-block btn-user" type="submit">Ingresar</button>
                                    </form>
                                    <hr>                                    
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
